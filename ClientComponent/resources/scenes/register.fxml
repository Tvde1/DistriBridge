<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.102"
          fx:controller="com.distribridge.clientcomponent.controllers.RegisterController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBtnBackClick" text="Back" GridPane.columnIndex="1"
                GridPane.rowIndex="5" GridPane.valignment="TOP"/>
        <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#onBtnRegisterClick" text="Register"
                GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="TOP"/>
        <TextField fx:id="tfUsername" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="tfPassword" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="tfEmail" promptText="E-Mail Address" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </children>
</GridPane>
